<odoo>
    <record id="view_sale_analysis_tree" model="ir.ui.view">
        <field name="name">sale.analysis.tree</field>
        <field name="model">sale.analysis</field>
        <field name="arch" type="xml">
            <tree string="Sales Analysis">
                <field name="date"/>
                <field name="total_sales"/>
                <field name="total_revenue"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_analysis_form" model="ir.ui.view">
        <field name="name">sale.analysis.form</field>
        <field name="model">sale.analysis</field>
        <field name="arch" type="xml">
            <form string="Sales Analysis">
                <group>
                    <field name="date"/>
                    <field name="total_sales"/>
                    <field name="total_revenue"/>
                </group>
            </form>
        </field>
    </record>
</odoo>